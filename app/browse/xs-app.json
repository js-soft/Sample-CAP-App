{
  "authenticationMethod": "route",
  "routes": [
    {
      "source": "^/?odata/(.*)$",
      "target": "/odata/$1",
      "destination": "srv-api",
      "authenticationType": "xsuaa",
      "csrfProtection": true
    },
    {
      "source": "^(.*)$",
      "target": "$1",
      "service": "html5-apps-repo-rt",
      "authenticationType": "xsuaa"
    },
    {
      "source": "^/browse-sales-orders/(.*)$",
      "target": "$1",
      "authenticationType": "xsuaa",
      "scope": "$XSAPPNAME.Admin"
    }
  ]
}
