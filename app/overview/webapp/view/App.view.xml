<mvc:View
  controllerName="overview.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:layout="sap.ui.layout"
  xmlns:integration="sap.ui.integration.widgets">

  <App>
    <pages>
      <Page title="{i18n>appTitle}">
        <content>
          <!-- Simple responsive 2x2 layout -->
          <layout:Grid defaultSpan="L6 M6 S12" class="sapUiSmallMargin">

            <integration:Card id="cardRevenue"  class="sapUiSmallMarginBottom" />
            <integration:Card id="cardTopCust"  class="sapUiSmallMarginBottom" />
            <integration:Card id="cardByGenre"  class="sapUiSmallMarginBottom" />    

          </layout:Grid>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>
