{
  "xsappname": "sample-cap-app",
  "tenant-mode": "shared",
  "scopes": [
    { "name": "$XSAPPNAME.User",  "description": "Browse & order books" },
    { "name": "$XSAPPNAME.Admin", "description": "Admin (manage sales orders)" }
  ],
  "role-templates": [
    {
      "name": "User",
      "description": "Can browse books and place orders",
      "scope-references": [ "$XSAPPNAME.User" ]
    },
    {
      "name": "Admin",
      "description": "Full admin (incl. sales orders app)",
      "scope-references": [ "$XSAPPNAME.Admin" ]
    }
  ]
}
